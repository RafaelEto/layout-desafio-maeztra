.header
    position: sticky;
    top: 0;
    z-index: 200;
    background: #fff;
    transition: all .2s ease-in-out;
    box-shadow 0 3px 6px rgba(0, 0, 0, .16)
    &__container
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1600px;
        margin: 0 auto;
        padding: 20px 0;

    &__button
        display: none

    &__search
        max-width: 790px
        width: 100%

        &--icon
            display: none

    &__customer
        &:hover
            .customer
                svg
                    fill $color
                &__title
                    color $color

    &__favorites
        &:hover
            .favorites
                svg
                    fill $color
                &__title
                    color $color

    &__minicart
         &:hover
            .minicart
                svg
                    fill $color
                &__title
                    color $color

@media screen and (max-width: 1600px)
    .header
        &__container
            margin: 0 20px

@media screen and (max-width: 1400px)
    .header
        &__search
            max-width: 570px
            
@media screen and (max-width: 1100px)
    .header
        &__search
            max-width: 370px

@media $mobile
    .header
        &:before
            content: ''
            position: absolute
            width: 100%
            height: 100%
            left: 0
            top: 0
            background: #fff

        &__container
            padding 32px 0

        &__customer, &__favorites
            display: none

        &__button
            display: flex
            margin-right: 20px

        &__button, &__logo, &__minicart
            z-index 1

        &__logo
            flex 1

        &__search
            position: absolute;
            top: 100%;
            width: 100%;
            left: 0;
            background: #fff;
            padding: 10px;
            -webkit-transform: translateY(-100%);
            transform: translateY(-100%);
            transition: all .2s ease-out;
            z-index: -1;
            box-shadow: 0 3px 6px rgba(0, 0, 0, .16)
            max-width: none

            &.show
                transform: translateY(0)

            &--icon
                display: flex;
                z-index: 1;
                margin-right: 40px;