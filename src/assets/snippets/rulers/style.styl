.rulers
    padding-top: 24px

    &__title
        font-size: 16px
        font-weight: 700
        color: #353535
        line-height: 24px
        text-align: center
        margin-bottom: 21px

    &__list
        &:not(.slick-initialized)
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin 0 -7.5px

    &__item
        flex: 1
        margin: 0 7.5px
        background: #EFEFEF
        border-radius: 4px
        padding: 16px 0 16px 27px

    &__box
        display: flex
        justify-content: flex-start
        align-items: center

    &__icon
        margin-right: 22px

        img
            display: block

    &__text
        display: flex;
        flex-direction: column;
        align-items: flex-start;

        strong
            font-size: 14px
            color: #353535
            line-height: 21px

        p
            font-size: 12px
            font-weight: 400
            color: #000
            line-height: 18px

@media screen and (max-width: 1300px)
    .rulers
        &__box
            height: 57px

@media $mobile
    .rulers
        margin 0 0 0 30px

        &__title
            margin-right: 30px

        &__list
            margin 0 -37.5px
            .slick-list
                padding-left: 0 !important