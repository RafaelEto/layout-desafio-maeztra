.slick
    &-dotted
        &.slick-slider
            margin: 0

    &-arrow
        z-index 1
        width: auto
        height: auto
        display: flex
        justify-content: center
        align-items: center

        &:before
            content: ''

    &-dots
        bottom: 24px

        li
            width: 16px
            height: 16px
            margin 0 8px
            border-radius: 50%
            border: 2px solid $color
            transition $transition

            &.slick-active
            &:hover
                background: $color

            button
                width: 100%
                height: 100%
                &:before
                    content: ''

@media $mobile
    .slick
        &-dots
            bottom: 16px

            li
                width 8px
                height: 8px